@model List<Albergo.Models.Prenotazione>

<h2>Risultati della Ricerca</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Numero Camera</th>
                <th>Data Prenotazione</th>
                <!-- Aggiungi altre colonne necessarie -->
            </tr>
        </thead>
        <tbody>
            @foreach (var prenotazione in Model)
            {
                <tr>
                    <td>@prenotazione.ID</td>
                    <td>@prenotazione.NumeroCamera</td>
                    <td>@prenotazione.DataPrenotazione</td>
                    <!-- Aggiungi altre colonne necessarie -->
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nessuna prenotazione trovata.</p>
}
