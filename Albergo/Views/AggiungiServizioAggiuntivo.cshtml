@model ServizioAggiuntivo

<form asp-controller="ServizioAggiuntivo" asp-action="AggiungiServizioAggiuntivo" method="post">
    <input type="hidden" asp-for="PrenotazioneID" value="@Model.PrenotazioneID" />
    <div class="form-group">
        <label for="tipo">Tipo di Servizio:</label>
        <input type="text" class="form-control" id="tipo" name="tipo" required>
    </div>
    <div class="form-group">
        <label for="quantità">Quantità:</label>
        <input type="number" class="form-control" id="quantità" name="quantità" required>
    </div>
    <div class="form-group">
        <label for="prezzo">Prezzo:</label>
        <input type="number" class="form-control" id="prezzo" name="prezzo" required>
    </div>
    <button type="submit" class="btn btn-primary">Aggiungi Servizio</button>
</form>
